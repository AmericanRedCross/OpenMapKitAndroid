<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.redcross.openmapkit.controlpanel.OSMLayersFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_osm_layers_tab"
            android:id="@+id/osmLayersTabTitle"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:textColor="@color/osm_dark_green"
            android:paddingBottom="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_buildings"
                android:id="@+id/toggleBuildings"
                android:textOff="@string/toggle_buildings"
                android:textOn="@string/toggle_buildings"
                android:checked="true"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_roads"
                android:id="@+id/toggleRoads"
                android:textOff="@string/toggle_roads"
                android:textOn="@string/toggle_roads"
                android:checked="true"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toggle_other"
                android:id="@+id/toggleOther"
                android:textOff="@string/toggle_other"
                android:textOn="@string/toggle_other"
                android:checked="true"/>
        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
    </LinearLayout>

</FrameLayout>
