<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="americanredcross.org.openmapkit.TagCreatorActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTagName"
        android:layout_marginRight="16dp"
        android:hint="@string/tagNameHint"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_margin="16dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTagValue"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/editTextTagName"
        android:layout_alignLeft="@+id/editTextTagName"
        android:layout_alignStart="@+id/editTextTagName"
        android:hint="@string/tagValueHint" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelButtonTitle"
        android:id="@+id/buttonCancel"
        android:layout_below="@+id/editTextTagValue"
        android:layout_alignLeft="@+id/editTextTagValue"
        android:layout_alignStart="@+id/editTextTagValue"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/saveButtonTitle"
        android:id="@+id/buttonSave"
        android:layout_alignTop="@+id/buttonCancel"
        android:layout_toRightOf="@+id/buttonCancel"
        android:layout_toEndOf="@+id/buttonCancel"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

</RelativeLayout>
